{
	"compilerOptions": {
		"rootDir": "./src/",
		"outDir": "./dist/",
		"target": "ES5",

		"module": "CommonJS",
		"moduleResolution": "Node",

		"declaration": false,
		"importHelpers": true,
		"removeComments": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"preserveConstEnums": true,
		"allowSyntheticDefaultImports": true,

		"strict": true,
		"allowJs": true,
		"checkJs": false,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"strictNullChecks": true,
		"noUnusedParameters": true,
	},
	"include": [
		"./src/"
	],
	"exclude": [
		"./node_modules/"
	]
}

